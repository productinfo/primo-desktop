{
  "name": "primo-desktop",
  "productName": "primo",
  "version": "0.2.3",
  "description": "primo",
  "main": "src/index.cjs",
  "type": "module",
  "scripts": {
    "dist": "electron-builder",
    "electron": "electron .",
    "start": "concurrently \"npm:dev\" \"electron .\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-windows": "electron-packager . --platform=win32 --overwrite",
    "publish": "electron-forge publish",
    "dev": "npm link @primo-app/primo && svelte-kit dev -p 3333",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "keywords": [],
  "author": "mateomorris",
  "license": "AGPL",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "primo.icns",
        "osxSign": {
          "identity": "Developer ID Application: Primo Creative LLC (7782K26HH4)",
          "hardened-runtime": true,
          "entitlements": "./entitlements.plist",
          "entitlements-inherit": "./entitlements.plist",
          "signature-flags": "library"
        },
        "osxNotarize": {
          "appleId": "accounts@primo.af",
          "appleIdPassword": "wcpd-knmo-dnmo-rmad"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "background": "./assets/dmg-background.png",
          "config": {
            "format": "ULFO"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@primo-app/primo": "^1.3.81",
    "autoprefixer": "^10.4.0",
    "axios": "^0.21.4",
    "browser-image-compression": "^1.0.16",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "esm": "^3.2.25",
    "file-saver": "^2.0.5",
    "fs-extra": "^10.0.0",
    "idb-keyval": "^6.0.2",
    "install": "^0.13.0",
    "javascript-time-ago": "^2.3.8",
    "js-beautify": "^1.14.0",
    "jszip": "^3.7.1",
    "lodash-es": "^4.17.21",
    "mini-svg-data-uri": "^1.4.3",
    "postcss": "^8.3.11",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "postcss-selector-parser": "^6.0.6",
    "prettier": "^2.4.1",
    "promise-worker": "^2.0.1",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-dmg": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@sveltejs/adapter-static": "^1.0.0-next.19",
    "@sveltejs/kit": "next",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.11",
    "@tsconfig/svelte": "^2.0.1",
    "concurrently": "^6.4.0",
    "electron": "^14.0.1",
    "electron-builder": "^22.14.5",
    "electron-packager": "^15.4.0",
    "postcss-load-config": "^3.1.0",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.10.1",
    "tailwindcss": "^2.2.19",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",
    "vite": "^2.5.4"
  },
  "repository": "https://github.com/primo-af/primo-desktop.git",
  "private": false
}
